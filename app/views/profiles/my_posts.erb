<div id="profile">
  <h3>My profile</h3>
  <%= render 'shared/profile_nav' %>
  <ul id="profile_threads">
    <% if @user.posts.any? %>
      <% @user.posts.each do |post| %>
        <li>
          <h3><%= link_to post.title, post_path(post) %></h3>
          <span>Posted <%= time_ago_in_words(post.created_at) %> ago.</span>
        </li>
      <% end %>
    <% else %>
      <li>No posts to show at the moment...</li>
    <% end %>
  </ul>
</div>
