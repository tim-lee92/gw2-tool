<div id="profile">
  <h3>My profile</h3>
  <%= render 'shared/profile_nav' %>
  <ul id="profile_donations">
    <% if @user.donations.any? %>
      <% @user.donations.each do |donation| %>
        <li>
          <p>
            $ <strong><%= number_with_precision(donation.amount.to_f / 100, precision: 2) %></strong>
            <small title="<%= donation.created_at %>">donated <%= time_ago_in_words(donation.created_at) %> ago - Reference id: <%= donation.stripe_transaction_id %></small>
          </p>
        </li>
      <% end %>
    <% else %>
      <li>No donations to show at the moment... <%= link_to "Want to make a contribution?", donate_path %></li>
    <% end %>
  </ul>
</div>
