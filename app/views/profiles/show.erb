<div id="profile">
  <h3>My profile</h3>
  <%= render 'shared/profile_nav' %>
  <%= form_for(@user, url: {controller: "profiles", action: "change_password", method: :post}) do |f|%>
    <h4>Change your password</h4>
    <div class="row">
      <div class="form-group col-md-6">
        <%= label_tag(:old_password, "Old Password") %>
        <%= password_field_tag(:old_password, "", class: "form-control") %>
      </div>
    </div>
    <div class="row">
      <div class="form-group col-md-6">
        <%= f.label(:password, "New Password") %>
        <%= f.password_field(:password, class: "form-control") %>
      </div>
    </div>
    <div class="row">
      <div class="form-group col-md-6">
        <%= f.label(:password_confirmation, "New Password Confirmation") %>
        <%= f.password_field(:password_confirmation, class: "form-control") %>
      </div>
    </div>
    <%= submit_tag("Change Password", class: "btn btn-info") %>
  <% end %>
</div>
