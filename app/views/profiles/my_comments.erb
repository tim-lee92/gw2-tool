<div id="profile">
  <h3>My profile</h3>
  <%= render 'shared/profile_nav' %>
  <ul id="profile_threads">
    <% if @user.comments.any? %>
      <% @user.comments.each do |comment| %>
        <li>
          <h4><%= link_to comment.post.title, post_path(comment.post) %></h4>
          <p><%= comment.body %></p>
          <small>commented <%= time_ago_in_words(comment.created_at) %> ago</small>
        </li>
      <% end %>
    <% else %>
      <li>No comments to show at the moment...</li>
    <% end %>
  </ul>
</div>
